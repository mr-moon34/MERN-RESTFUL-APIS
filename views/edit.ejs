<%- include("includes/header.ejs"); %> <!-- Include header -->

<title>Edit Post</title>
<link rel="stylesheet" href="/css/edit.css"> <!-- Link to your CSS file -->

<h2>Edit Your Post</h2>
<div class="edit-container">
    <p><strong>Post ID:</strong> <%= post.id %></p>
    <p><strong>Post Username:</strong> @<%= post.username %></p>

    <form method="POST" action="/posts/<%= post.id %>?_method=PATCH" class="edit-form">
        <div class="form-group">
            <label for="content">Post Content:</label>
            <textarea name="content" id="content" rows="10" cols="35"><%= post.content %></textarea>
        </div>
        <button type="submit" class="submit-btn">Submit Changes</button>
    </form>
</div>

