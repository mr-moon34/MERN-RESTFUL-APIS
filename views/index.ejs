<%- include("includes/header.ejs"); %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Posts</title>
    <link rel="stylesheet" href="/css/index.css">
</head>
<body>
    <div class="container">
        <header>
            <h1>Quora Posts</h1>
        </header>
        
        <div class="actions">
            <a href="http://localhost:8080/posts/new" class="btn create-btn">Create New Post</a>
        </div>

        <div class="posts">
            <% for (post of posts) { %> 
            <div class="post">
                <div class="post-header">
                    <h3>@<%= post.username %></h3>
                </div>
                <div class="post-content">
                    <h4><%= post.content %></h4>
                </div>
                <div class="post-actions">

                    <a href="http://localhost:8080/posts/<%=post.id%>" class="btn view-btn">View</a>
                    <a href="http://localhost:8080/posts/<%=post.id%>/edit" class="btn edit-btn">Edit</a>

                    <form method="post" action="/posts/<%= post.id %>?_method=DELETE" style="display:inline;">
                        <button  class="btn delete-btn">Delete</button>
                    </form>
                    
                </div>
            </div>
            <% } %>
        </div>
    </div>
</body>
</html>

<%- include("includes/footer.ejs"); %>
